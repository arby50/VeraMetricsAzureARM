
{
    "$schema": "https://schema.management.azure.com/schemas/0.1.2-preview/CreateUIDefinition.MultiVm.json#",
    "handler": "Microsoft.Azure.CreateUIDef",
    "version": "0.1.2-preview",
    "parameters": {
        "basics": [
        ],
        "steps": [
            {
                "name": "vmConfig",
                "label": "Virtual Machine settings",
                "subLabel": {
                    "preValidation": "Configure the virtual machine settings",
                    "postValidation": "Done"
                },
                "bladeTitle": "VM Settings",
                "elements": [
                    {
                        "name": "vmInstanceName",
                        "type": "Microsoft.Common.TextBox",
                        "label": "Virtual Machine Name",
                        "toolTip": "Virtual Machine Name",
                        "defaultValue": "",
                        "constraints": {
                            "required": true,
                            "regex": "^[a-z][a-z0-9-]{1,23}[a-z0-9]$",
                            "validationMessage": "Must be 3-25 characters, start with a letter, end with alphanumeric, and contain only lowercase letters, numbers, and hyphens."
                        }
                    },
                    {
                        "name": "vmSize",
                        "type": "Microsoft.Compute.SizeSelector",	
                        "label": "Virtual machine size",
                        "toolTip": "The size of the virtual machine",
                        "recommendedSizes": [
                            "Standard_DS1_v2"
                        ],
                        "osPlatform": "Windows",
                        "count": 1
                    }
                ]
            }
        ],
        "outputs": {
            "vmSize": "[steps('vmConfig').vmSize]",
            "vmInstanceName": "[steps('vmConfig').vmInstanceName]",
			"location": "[location()]"
        }
    }
}
