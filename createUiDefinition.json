
{
	"$schema": "https://schema.management.azure.com/schemas/2021-09-09/uiFormDefinition.schema.json",
	"view": {
		"kind": "Form",
		"properties": {
			"title": "Deploy VeraMetrics Engine",
			"steps": [
				{
					"name": "basics",
					"label": "Basics",
					"elements": [
						{
							"name": "resourceScope",
							"type": "Microsoft.Common.ResourceScope",
							"location": {
								"resourceTypes": [
									"microsoft.resources/resourcegroups"
								]
							}
						},
						{
							"name": "instanceName",
							"type": "Microsoft.Common.TextBox",
							"label": "Application Name",
							"defaultValue": "verametrics001",
							"toolTip": "The unique name for this instance of the Managed Application.",
							"visible": true
						},
						{
							"name": "vmSize",
							"type": "Microsoft.Common.DropDown",
							"label": "Virtual Machine Size",
							"toolTip": "Choose your desired VM size",
							"defaultValue": "Standard_B4ms",
							"constraints": {
								"allowedValues": [
									{
										"label": "Standard_B4ms",
										"value": "Standard_B4ms"
									},
									{
										"label": "Standard_D8s_v3",
										"value": "Standard_D8s_v3"
									},
									{
										"label": "Standard_E8s_v3",
										"value": "Standard_E8s_v3"
									}
								]
							},
							"visible": true
						}
					]
				}
			]
		},
		"outputs": {
			"kind": "ResourceGroup",
			"location": "[steps('basics').resourceScope.location.name]",
			"resourceGroupId": "[steps('basics').resourceScope.resourceGroup.id]",
			"parameters": {
				"instanceName": "[steps('basics').instanceName]",
				"vmSize": "[steps('basics').vmSize]"
			}
		}
	}
}
